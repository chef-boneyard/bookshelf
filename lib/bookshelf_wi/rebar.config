%% -*- mode: erlang; -*-

{require_otp_vsn, "R1[45]B.*"}.

{deps,
 [{cowboy, ".*",
   {git, "https://github.com/extend/cowboy.git",
    {tag, "0.6.0"}}},
  {erlsom, ".*",
   {git, "https://github.com/opscode/erlsom.git",
    {branch, "integer_long_string_probs"}}},
  {iso8601, ".*",
   {git, "https://github.com/opscode/erlang_iso8601.git",
    {branch, "master"}}},
  %% Compile time dependencies, should not appear in the release
  {covertool, ".*",
   {git, "https://github.com/opscode/covertool.git",
    {branch, "master"}}},
  {erlware_commons, ".*",
   {git, "https://github.com/erlware/erlware_commons.git",
    {tag, "v0.6.2"}}},
  {mini_s3, ".*",
   {git, "git@github.com:opscode/mini_s3.git",
    {branch, "master"}}}
 ]}.

{plugins, [rebar_covertool]}.

{erl_opts,
 [debug_info,
  warnings_as_errors]}.

{xref_checks,
 [exports_not_used,
  undefined_function_calls]}.

{eunit_opts,
 [verbose,
  {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled, true}.
{covertool_eunit, "coverage.xml"}.
{covertool_prefix_len, 2}.

{sub_dirs, ["rel"]}.
